{# templates/program/show.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Série #{{ program.id }}
{% endblock %}

{% block body %}

	<div class="media">
		<img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
		<div class="media-body">
			<h1 class="mt-0">{{ program.title }}</h1>
			<p>{{ program.summary }}</p>
			{% if app.user %}
				<a href="{{ path('program_watchlist', {id: program.id})}}">
					<i class="{{ app.user.isInWatchlist(program) ? 'fas' : 'far' }} fa-heart"></i>
				</a>
			{% endif %}
			<p>
				Catégorie :
				{{ program.category.name }}
			</p>
			<ul>
				{% for season in seasons %}
					<li>
						{{season.number}}
						-
						{{season.year}}
						-
						<a href="{{path("program_show_season", { program_id : program.id, season_id : season.number})}}">Voir season</a>
					</li>
				{% endfor %}
			</ul>
			<strong>Acteurs :</strong>
			<ul>
				{% for actor in program.actors %}
					<li>
						<a href="{{path("actor_show", {id: actor.id })}}">
							{{actor.firstname }}
							{{actor.lastname}}
						</a>
					</li>
				{% else %}
					<li>Aucun acteur pour cette série</li>
				{% endfor %}
			</ul>

		</div>
	</div>

	<a href="{{ path('program_index') }}">
		Retour à la liste des programmes
	</a>

{% endblock %}
